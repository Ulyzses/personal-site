---
export interface Props {
    title?: string;
    tags?: string[];
}

const { title="", tags=[] } = Astro.props as Props;
---

<div class="card">
    {title && (<h3>{title}</h3>)}
    {tags.length > 0 && (
        <div class="tags">
            {tags.map((tag) => (
                <span class="tag"><i>{tag}</i></span>
            ))}
        </div>
    )}
    <slot />
</div>

<style>
.card {
    background: #fdfeff;
    padding: 24px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.tag {
    background: var(--color-primary-light);
    padding: 0.4rem 0.8rem;
    border-radius: 0.8rem;
    margin-right: 8px;
    font-size: 0.8rem;
    cursor: default;
}
</style>