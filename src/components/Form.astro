---
export interface Props {
    name: string;
    title?: string;
}

const { name, title } = Astro.props as Props;
---

<form id={name} action="https://getform.io/f/5b465511-db63-4e1a-a9b4-2f9d98a21434" method="POST">
    {title && <h3>{title}</h3>}
    <slot />
</form>

<style>
form {
    padding: 24px;
    background-color: #fdfeff;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
}
</style>